datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(cuid())
  clerkId     String       @unique
  email       String       @unique
  createdAt   DateTime     @default(now())
  memberships Membership[]
  characters  Character[]
  messages    Message[]

  @@map("users")
}

model Campaign {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  description String?
  avatar      String?
  createdAt   DateTime     @default(now())
  members     Membership[]
  characters  Character[]
  invites     Invite[] // Add relation to Invite model
  messages    Message[]

  @@map("campaigns")
}

model Membership {
  id         String   @id @default(cuid())
  userId     String
  campaignId String
  role       String // "DM" | "Player"
  user       User     @relation(fields: [userId], references: [id])
  campaign   Campaign @relation(fields: [campaignId], references: [id])

  @@unique([userId, campaignId])
  @@map("campaign_members")
}

model Character {
  id         String @id @default(cuid())
  userId     String
  campaignId String
  name       String
  sheetJson  Json

  user     User     @relation(fields: [userId], references: [id])
  campaign Campaign @relation(fields: [campaignId], references: [id])

  @@map("characters")
}

model Invite {
  id         String   @id @default(cuid())
  token      String   @unique
  campaignId String
  createdAt  DateTime @default(now())
  used       Boolean  @default(false)
  usedBy     String?
  campaign   Campaign @relation(fields: [campaignId], references: [id])

  @@map("invites")
}

model Message {
  id         String   @id @default(cuid())
  campaignId String
  userId     String
  text       String
  sender     String
  createdAt  DateTime @default(now())

  campaign   Campaign @relation(fields: [campaignId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@index([campaignId])
  @@index([userId])
  @@map("messages")
}
